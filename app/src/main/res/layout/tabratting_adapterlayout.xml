<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="8dp"
    android:id="@+id/ratingcard"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginEnd="6dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/medalframe"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/medal_img"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:src="@drawable/ratingmedal" />

            <TextView
                android:id="@+id/change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_14sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/rankno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_16sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:ignore="RtlSymmetry" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/profilelayout_click"
            android:layout_marginRight="@dimen/dimen_10dp"

            android:layout_height="match_parent"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:src="@drawable/user_default" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/image"
                android:textColor="#4c4c4c"
                android:textSize="18sp"
                tools:text="User Name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_toEndOf="@+id/image"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/coffeebean" />

            <TextView
                android:id="@+id/beans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="Beans"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />


        </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/follow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />


    </LinearLayout>
</android.support.v7.widget.CardView>