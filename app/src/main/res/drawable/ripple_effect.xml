<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorPrimary"
    tools:targetApi="lollipop">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="50dp"></corners>
            <solid android:color="@color/colorPrimary" />
            <padding
                android:bottom="@dimen/padding_small_5"
                android:left="@dimen/padding_medium_10dp"
                android:right="@dimen/padding_medium_10dp"
                android:top="@dimen/padding_small_5"></padding>
        </shape>
    </item>
    <item

        android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/padding_extra_large_20"></corners>
            <solid android:color="@color/colorAccent" />
            <padding
                android:bottom="@dimen/padding_small_5"
                android:left="@dimen/padding_medium_10dp"
                android:right="@dimen/padding_medium_10dp"
                android:top="@dimen/padding_small_5"></padding>
        </shape>
    </item>
</ripple>
